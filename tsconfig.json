{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
            "*": [ "types/*" ]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "lib/Hue.ts"
    ]
}
{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "*": [ "types/*" ]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "__mocks__"
    ]
}